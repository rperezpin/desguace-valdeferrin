---
import Layout from '../layouts/Layout.astro';

const vehiculos = [
  { id: 1, marca: 'Seat', modelo: 'Leon', anio: 2019, motor: '2.0 TDI', color: 'Blanco', estado: 'En proceso', imagen: '/images/placeholder-pieza.svg' },
  { id: 2, marca: 'Volkswagen', modelo: 'Golf VII', anio: 2017, motor: '1.6 TDI', color: 'Gris', estado: 'En proceso', imagen: '/images/placeholder-pieza.svg' },
  { id: 3, marca: 'Opel', modelo: 'Astra J', anio: 2014, motor: '1.7 CDTI', color: 'Negro', estado: 'Completado', imagen: '/images/placeholder-pieza.svg' },
  { id: 4, marca: 'Renault', modelo: 'Megane III', anio: 2016, motor: '1.5 DCI', color: 'Azul', estado: 'En proceso', imagen: '/images/placeholder-pieza.svg' },
  { id: 5, marca: 'Ford', modelo: 'Focus III', anio: 2018, motor: '1.0 EcoBoost', color: 'Rojo', estado: 'En proceso', imagen: '/images/placeholder-pieza.svg' },
  { id: 6, marca: 'Peugeot', modelo: '308', anio: 2015, motor: '1.6 HDI', color: 'Plata', estado: 'Completado', imagen: '/images/placeholder-pieza.svg' },
];
---

<Layout
  title="Campa Virtual"
  description="Vehiculos actualmente en despiece en Desguaces Valdeferrin. Consulte las piezas disponibles de cada vehiculo en nuestra campa de Ejea de los Caballeros."
>
  <!-- Header -->
  <section class="bg-primary-700 text-white py-10">
    <div class="container-site">
      <h1 class="font-display font-bold text-3xl md:text-4xl mb-2">Campa Virtual</h1>
      <p class="text-primary-200">Vehiculos actualmente en despiece. Consulte las piezas disponibles.</p>
    </div>
  </section>

  <section class="section-padding">
    <div class="container-site">
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {vehiculos.map((v) => (
          <article class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-lg transition-all duration-300 group border border-grey-200">
            <div class="relative aspect-[16/10] overflow-hidden bg-grey-200">
              <img
                src={v.imagen}
                alt={`${v.marca} ${v.modelo} ${v.anio}`}
                loading="lazy"
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
              />
              <span class:list={[
                'absolute top-3 right-3 text-[10px] font-display font-bold uppercase tracking-wider px-2 py-1 rounded',
                v.estado === 'En proceso' ? 'bg-accent-500 text-white' : 'bg-grey-600 text-white'
              ]}>
                {v.estado}
              </span>
            </div>

            <div class="p-5">
              <h2 class="font-display font-bold text-lg text-dark">
                {v.marca} {v.modelo}
              </h2>
              <div class="flex flex-wrap gap-x-4 gap-y-1 mt-2 text-sm text-grey-600">
                <span class="flex items-center gap-1">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-3.5 h-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
                  {v.anio}
                </span>
                <span class="flex items-center gap-1">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-3.5 h-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="3"></circle><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-4 0v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06A1.65 1.65 0 0 0 4.68 15a1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1 0-4h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06A1.65 1.65 0 0 0 9 4.68a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 4 0v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9c.26.604.852.997 1.51 1H21a2 2 0 0 1 0 4h-.09a1.65 1.65 0 0 0-1.51 1z"></path></svg>
                  {v.motor}
                </span>
                <span>{v.color}</span>
              </div>

              <a
                href={`/recambios?q=${encodeURIComponent(v.marca + ' ' + v.modelo)}`}
                class="btn-primary mt-4" style="width: 100%; font-size: 0.75rem;"
              >
                Ver piezas disponibles
              </a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>
</Layout>
