---
import Layout from '../layouts/Layout.astro';
import { site } from '../data/site';
---

<Layout
  title="Contacto"
  description="Contacte con Desguaces Valdeferrin en Ejea de los Caballeros. Telefono, email, WhatsApp, horario y ubicacion. Estamos a su disposicion para cualquier consulta."
>
  <!-- Header -->
  <section class="bg-primary-700 text-white py-10">
    <div class="container-site">
      <h1 class="font-display font-bold text-3xl md:text-4xl mb-2">Contacto</h1>
      <p class="text-primary-200">Estamos a su disposicion. Contacte con nosotros por el medio que prefiera.</p>
    </div>
  </section>

  <section class="section-padding">
    <div class="container-site">
      <div class="grid lg:grid-cols-2 gap-8 lg:gap-12">
        <!-- Contact Info -->
        <div>
          <h2 class="font-display font-bold text-2xl text-dark mb-6">Informacion de Contacto</h2>

          <div class="space-y-6">
            <!-- Direccion -->
            <div class="flex gap-4">
              <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center text-primary-700 shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path><circle cx="12" cy="10" r="3"></circle></svg>
              </div>
              <div>
                <h3 class="font-display font-bold text-sm uppercase text-dark">Direccion</h3>
                <p class="text-grey-600 text-sm mt-1">
                  {site.address.street}<br />
                  {site.address.postalCode} {site.address.city}<br />
                  {site.address.province}, {site.address.region}
                </p>
              </div>
            </div>

            <!-- Telefono -->
            <div class="flex gap-4">
              <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center text-primary-700 shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
              </div>
              <div>
                <h3 class="font-display font-bold text-sm uppercase text-dark">Telefono</h3>
                <a href={site.phoneHref} class="text-primary-700 font-semibold hover:underline">{site.phone}</a>
              </div>
            </div>

            <!-- WhatsApp -->
            <div class="flex gap-4">
              <div class="w-12 h-12 bg-[#25D366]/10 rounded-xl flex items-center justify-center text-[#25D366] shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>
              </div>
              <div>
                <h3 class="font-display font-bold text-sm uppercase text-dark">WhatsApp</h3>
                <a href={site.whatsappUrl} target="_blank" rel="noopener noreferrer" class="text-[#25D366] font-semibold hover:underline">Enviar mensaje</a>
              </div>
            </div>

            <!-- Email -->
            <div class="flex gap-4">
              <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center text-primary-700 shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"></rect><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path></svg>
              </div>
              <div>
                <h3 class="font-display font-bold text-sm uppercase text-dark">Email</h3>
                <a href={`mailto:${site.email}`} class="text-primary-700 font-semibold hover:underline">{site.email}</a>
              </div>
            </div>

            <!-- Horario -->
            <div class="flex gap-4">
              <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center text-primary-700 shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>
              </div>
              <div>
                <h3 class="font-display font-bold text-sm uppercase text-dark">Horario</h3>
                <div class="text-sm text-grey-600 mt-1 space-y-1">
                  <p>Lunes a Viernes: <span class="text-dark font-medium">{site.horario.lunesViernes}</span></p>
                  <p>Sabado: <span class="text-dark font-medium">{site.horario.sabado}</span></p>
                  <p>Domingo: <span class="text-red-500 font-medium">{site.horario.domingo}</span></p>
                </div>
              </div>
            </div>
          </div>

          <!-- Mapa -->
          <div class="mt-8 rounded-xl overflow-hidden border border-grey-200 shadow-sm">
            <iframe
              src={`https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d5000!2d${site.coordinates.lng}!3d${site.coordinates.lat}!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNDLCsDA3JzM2LjUiTiAxwrAwOCcxNC4zIlc!5e0!3m2!1ses!2ses!4v1700000000000!5m2!1ses!2ses`}
              width="100%"
              height="300"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              title="Ubicacion de Desguaces Valdeferrin en Ejea de los Caballeros"
            ></iframe>
          </div>
        </div>

        <!-- Contact Form -->
        <div>
          <div class="bg-white rounded-xl shadow-sm border border-grey-200 p-6 md:p-8 sticky top-24">
            <h2 class="font-display font-bold text-2xl text-dark mb-6">Envie su consulta</h2>

            <form id="contacto-form" class="space-y-4">
              <div>
                <label for="c-nombre" class="text-xs font-semibold text-grey-600 uppercase tracking-wider block mb-1">Nombre *</label>
                <input type="text" id="c-nombre" name="nombre" required class="w-full px-3 py-2.5 text-sm border border-grey-200 rounded-md outline-none focus:border-primary-500 focus:ring-1 focus:ring-primary-500" />
              </div>
              <div class="grid sm:grid-cols-2 gap-4">
                <div>
                  <label for="c-email" class="text-xs font-semibold text-grey-600 uppercase tracking-wider block mb-1">Email *</label>
                  <input type="email" id="c-email" name="email" required class="w-full px-3 py-2.5 text-sm border border-grey-200 rounded-md outline-none focus:border-primary-500 focus:ring-1 focus:ring-primary-500" />
                </div>
                <div>
                  <label for="c-telefono" class="text-xs font-semibold text-grey-600 uppercase tracking-wider block mb-1">Telefono</label>
                  <input type="tel" id="c-telefono" name="telefono" class="w-full px-3 py-2.5 text-sm border border-grey-200 rounded-md outline-none focus:border-primary-500 focus:ring-1 focus:ring-primary-500" />
                </div>
              </div>
              <div>
                <label for="c-asunto" class="text-xs font-semibold text-grey-600 uppercase tracking-wider block mb-1">Asunto *</label>
                <select id="c-asunto" name="asunto" required class="w-full px-3 py-2.5 text-sm border border-grey-200 rounded-md outline-none focus:border-primary-500">
                  <option value="">Seleccione...</option>
                  <option value="pieza">Consulta sobre una pieza</option>
                  <option value="tasacion">Tasacion de vehiculo</option>
                  <option value="baja">Baja de vehiculo</option>
                  <option value="otro">Otro asunto</option>
                </select>
              </div>
              <div>
                <label for="c-mensaje" class="text-xs font-semibold text-grey-600 uppercase tracking-wider block mb-1">Mensaje *</label>
                <textarea id="c-mensaje" name="mensaje" required rows="5" class="w-full px-3 py-2.5 text-sm border border-grey-200 rounded-md outline-none focus:border-primary-500 focus:ring-1 focus:ring-primary-500 resize-y"></textarea>
              </div>

              <!-- Honeypot -->
              <div class="hidden" aria-hidden="true">
                <input type="text" name="fax" tabindex="-1" autocomplete="off" />
              </div>

              <button type="submit" class="btn-primary w-full">
                Enviar Mensaje
              </button>
            </form>

            <div id="contacto-success" class="hidden text-center py-8">
              <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-primary-700" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
              </div>
              <h3 class="font-display font-bold text-xl text-dark mb-2">Mensaje enviado</h3>
              <p class="text-grey-600 text-sm">Gracias por contactarnos. Le responderemos lo antes posible.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  const form = document.getElementById('contacto-form') as HTMLFormElement;
  const success = document.getElementById('contacto-success');

  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    const honeypot = form.querySelector('input[name="fax"]') as HTMLInputElement;
    if (honeypot?.value) return;

    form.classList.add('hidden');
    success?.classList.remove('hidden');
  });
</script>
